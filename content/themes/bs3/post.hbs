{{!< default}}
<main class="content" role="main">
	<ol class="breadcrumb">
		<li><a href="/">{{@blog.title}}</a></li>
		<li class="active">{{post.title}}</li>
	</ol>
	{{#post}}
	<div class="row">
		<article class="col-md-8 {{post_class}}">
			<div class="page-header" style="margin-top: 0">
				<h1 class="post-title" style="margin-top: 0">{{{title}}}</h1>
				Posted on <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
				{{#if tags}}<span class="pull-right"><i class="fa fa-tags" title="Tags"></i> {{tags}}</span>{{/if}}
				<div class="clearfix"></div>
			</div>
			<section class="post-content">
				{{content}}
			</section>
		</article>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">About the author</div>
				<div class="panel-body">
					<h4>{{author.name}}</h4>
					<p>Email: <a href="mailto:{{author.email}}">{{author.email}}</a></p>
					<p>Web: <a href="{{author.website}}">{{author.website}}</a></p>
					<p>{{author.bio}}</p>
				</div>
			</div>
			<div class="share text-center">
				<a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" class="text-muted">
					<span class="fa-stack fa-lg">
						<i class="fa fa-circle fa-stack-2x"></i>
						<i class="fa fa-twitter fa-inverse fa-stack-1x"></i>
					</span>
				</a>
				<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" class="text-muted">
					<span class="fa-stack fa-lg">
						<i class="fa fa-circle fa-stack-2x"></i>
						<i class="fa fa-facebook fa-inverse fa-stack-1x"></i>
					</span>
				</a>
				<a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" class="text-muted">
					<span class="fa-stack fa-lg">
						<i class="fa fa-circle fa-stack-2x"></i>
						<i class="fa fa-google-plus fa-inverse fa-stack-1x"></i>
					</span>
				</a>
			</div>
		</div>
	</div>
	{{/post}}
</main>